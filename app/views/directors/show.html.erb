<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @director.name %></h3>
      </div>
      <div class="panel-body">
        <%= link_to image_tag(@director.image_url), director_url(@director), :class => "thumbnail" %>

        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Dob</dt>
              <dd><%= @director.dob %></dd>

              <dt>Bio</dt>
              <dd><%= truncate @director.bio %></dd>

              <dt>Filmography</dt>
              <dd>
                <!-- Bad -->
                <% movies = Movie.where({ :director_id => @director.id }) %>

                <!-- Good -->
                <% @director.filmography.each do |movie| %>
                  <li><%= movie.title %></li>
                <% end %>
              </dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to directors_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_director_url(@director.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to director_url(@director.id), :method => "delete", :data => { :confirm => "Do you really want to delete this director?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
